{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "isolatedModules": true,
		"noEmit": true,
		"checkJs": false,
		"resolveJsonModule": true,
  },
	"include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", ".mastra"]
}
